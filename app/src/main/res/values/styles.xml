<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="chipTheme" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@drawable/chip_text_color</item>
        <item name="chipBackgroundColor">@drawable/chip_color</item>
    </style>

    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/dekko</item>
    </style>

</resources>
